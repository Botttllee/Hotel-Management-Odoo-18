<odoo>
  <data>

    <record id="view_form_tipe" model="ir.ui.view">
      <field name="name">tipe.hotel.form</field>
      <field name="model">tipe.hotel</field>
      <field name="arch" type="xml">
          <form>
              <sheet>
                  <group string="Informasi Tipe Kamar">
                      <field name="nama_tipe"/>
                      <field name="harga"/>
                  </group>
                  <notebook>
              
                  </notebook>
              </sheet>
          </form>
      </field>
    </record>

    <record id="view_list_tipe" model="ir.ui.view">
          <field name="name">tipe.hotel.list</field>
          <field name="model">tipe.hotel</field>
          <field name="arch" type="xml">
              <list string="List Tipe Kamar">
                    <field name="nama_tipe"/>
                    <field name="harga"/>
              </list>
          </field>
    </record>        

    <record id="action_view_tipe" model="ir.actions.act_window">
        <field name="name">Tipe Kamar</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tipe.hotel</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Master data Tipe Kamar
            </p>
        </field>
    </record>      

    <menuitem id="menu_tipe" 
    name="Tipe Kamar" 
    parent="menu_config" 
    action="action_view_tipe" 
    sequence="2"/>           

  </data>
</odoo>