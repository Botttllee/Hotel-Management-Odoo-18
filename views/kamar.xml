<odoo>
  <data>

    <record id="view_form_kamar" model="ir.ui.view">
      <field name="name">kamar.hotel.form</field>
      <field name="model">kamar.hotel</field>
      <field name="arch" type="xml">
          <form>
            <header>
                <field name="tipe_kamar" widget="statusbar"/>
            </header>
            <sheet>
                <group string="Informasi Kamar">
                    <field name="nama_kamar"/>
                    <field name="nomor_kamar"/>
                    <field name="tipe_kamar" widget="radio"/>
                </group>
                <notebook>
            
                </notebook>
            </sheet>
          </form>
      </field>
    </record>

    <record id="view_list_kamar" model="ir.ui.view">
          <field name="name">kamar.hotel.list</field>
          <field name="model">kamar.hotel</field>
          <field name="arch" type="xml">
              <list string="List Kamar">
                    <field name="nama_kamar"/>
                    <field name="nomor_kamar"/>
                    <field name="tipe_kamar" widget="radio"/>
                    <field name="status_kamar" widget="statusbar"/>
              </list>
          </field>
    </record>        

    <record id="action_view_kamar" model="ir.actions.act_window">
        <field name="name">Hotel Master</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kamar.hotel</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Master data Kamar Hotel, Tipe Kamar, dan lain-lain
            </p>
        </field>
    </record>      

    <menuitem id="Menu_book_hotel" 
    name="Kamar hotel" 
    parent="menu_config" 
    action="action_view_kamar" 
    sequence="1"/>           

  </data>
</odoo>